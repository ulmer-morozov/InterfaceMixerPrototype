.phone-bg
    position: fixed;
    top: 20pt;
    left: 20pt;
    bottom: 0;
    right: 0;
    background: url(../images/background.png);
    background-repeat: no-repeat;
    background-position: center top;
    background-size: 424pt;

.phone-content {
    position: fixed;
    top: 122pt;
    left: calc(10pt + 50% - 375pt/2);
    width: screenWidth;
    height: screenHeight;
    border-radius: 4px;
    background-color: black;
    overflow: hidden;
    z-index: 1;
}
.bg-container {
    width: screenWidth;
    height: screenHeight;
    transform: rotate(20deg);
}
.side-bg {
    position: absolute;
    width: 500pt;
    height: 5427pt;
    animation: 30s infinite;
    animation-timing-function: linear;
    background-repeat: repeat;
}
.side-bg.left-bg {
    background: url(../images/left.jpg);
    right: 50%;
    animation-name: slideUp;
}
.side-bg.right-bg {
    background: url(../images/right.jpg);
    left: 50%;
    animation-name: slideDown;
}
.icon {
    display: inline-block;
    width: 80pt;
    height: 80pt;
    border-radius: 20pt;
    position: absolute;
    top: 40pt;
    animation: 2s infinite;
    /*animation-direction: alternate;*/
}
.icon.skype {
    left: 147.5pt;
    background-color: #08c;
    animation-name: pulseLeft;
    margin-left: -40pt;
}
.icon.autorap {
    right: 147.5pt;
    background-color: crimson;
    animation-name: pulseRight;
    margin-right: -40pt;
}
.start-shuffle-logo {
    position: absolute;
    left: 50%;
    top: 160pt;
    margin-left: -150pt;
    background: url(../images/logo_start.svg);
    width: 300pt;
    height: 62pt;
    /*padding: 10pt;*/
    background-size: contain;
    background-position: center center;
    background-repeat: no-repeat;
    border: 4pt solid #41ffba;
}
.start-shuffle-text {
    position: absolute;
    top: 320pt;
    left: 0;
    right: 0;
    text-align: center;
    color: white;
    font-size: 22pt;
    text-transform: uppercase;
}
.big-button {
    width: 280pt;
    margin-left: -158pt;
    padding: 18pt;
    color: accentColor1;
    background-color: accentColor2;
    text-align: center;
    font-size: 22pt;
    font-weight: bold;
    text-transform: uppercase;
    cursor: pointer;
}
.big-button:hover {
      color: accentColor2;
      background-color: accentColor1;
}
.start-shuffle {
    position: absolute;
    top: 500pt;
    left: 50%;
}
#page-2 {
    display: none;
}

/*Вторая страница*/

.app-container {
    position: absolute;
    width: appThumbWidth;
}

.app-container .app{
}

.app-container .app img {
    width: 100%;
    display: block;
    transition: opacity 0.5s ease-in-out;
}

.app-container .app.active {
  	background-color: accentColor2;
}

.app-container .app.inactive {
  	background-color: accentColor1;
}

#page-2.results .app-container .app.active img{
    opacity: 0.7;
}

#page-2.results .app-container .app.inactive img{
    opacity: 0.2;
}

#app-container-left{
  left: 0;
}
#app-container-right{
  right: 0;
}

#page-2.init .app-container {
    animation: 30s infinite linear;
}

#page-2.init #app-container-left{
  animation-name: slideUp-apps;
}
#page-2.init #app-container-right{
  animation-name: slideDown-apps;
}

#page-2 .bg-container {
    transform: none;
}
#page-2 .start-shuffle {
    top: 320pt;
}
#page-2 .side-bg.left-bg {
    background: url(../images/wall.jpg);
    background-size: contain;
}
#page-2 .side-bg.right-bg {
    background: url(../images/wall.jpg);
    background-size: contain;
    animation-name: slideDown-apps;
}
#page-2 .side-bg {
    width: 190pt;
    height: calc(2*3372.5pt);
}

#page-2 .start-shuffle {
    // display: none;
}

#page-2.shuffling .start-shuffle {
    animation: all 1s;
    animation-name: fadeOutDown;
     opacity: 0;
}

#page-2.results .restart-shuffle {
    position: absolute;
    top: 595pt;
    left: 50%;
    background: none;
    color: white;
}

#page-3 .start-shuffle-after-video{
    position: absolute;
    top: 280pt;
    left: 50%;
}

#page-2 .check-out{
  opacity: 0;
}

#page-2.results .check-out{
  position: absolute;
  top: 390pt;
  left: 50%;
  opacity: 1;
  animation: all 1s;
  animation-name: fadeInUpBig;
}

#page-2 .app-labels{
    opacity: 0;
    animation: all 0.5s;
}

#page-2.results .app-labels{
  opacity: 1;
  animation-name: slideInDown;
}

#page-2 .app-labels-title{
    opacity: 0;
    animation: all 0.5s;
}

#page-2.results .app-labels-title{
  opacity: 1;
  animation-name: slideInDown;
}

.app-labels{
  position: absolute;
  top: 190pt;
  width: 100%;
  color: accentColor2;
  display: flex;
  padding: 16pt;
}
  .app-labels .app-label {
      width: 50%;
      height: 32pt;
      font-size: 12pt;
      display: flex;
      align-items: center;
      text-transform: uppercase;
  }

  .app-labels .app-label .app-icon{
    height: 100%;
    border-radius: 6pt;
    margin-right: 6pt;
  }

  .app-labels .app-label.leftAppLabel{
    left: 0;
  }
  .app-labels .app-label.rightAppLabel{
    right: 0;
  }

.app-labels-title{
  position: absolute;
  top: navBarHeight;
  text-transform: uppercase;
  font-size: 20pt;
  text-align: center;
  padding-top: 50pt;
  color: accentColor2;
  text-align: center;
  width: 100%;
}

.nav-bar-header {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: navBarHeight;
    border-bottom: 3pt solid #41ffba;
    background-color: rgba(139, 37, 229, 0.6);
}
.nav-bar-header .logo {
    position: absolute;
    top: 30pt;
    left: 50%;
    height: 36pt;
    width: 170pt;
    margin-left: -85pt;
    background: url(../images/logo.svg);
    background-size: contain;
    background-position: center center;
    border: 3pt solid #41ffba;
}
.status-bar {
    position: absolute;
    top: 4pt;
    left: 2pt;
    right: 2pt;
    height: 12pt;
    background: url(../images/status-bar.svg);
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center center;
}

.combinationVideo{
  width: 100%;
  height: 100%;
}

@keyframes slideDown {
    0% {
        top: -2713.5pt;
    }
    100% {
        top: 0;
    }
}
@keyframes slideUp {
    0% {
        top: 0;
    }
    100% {
        top: -2713.5pt;
    }
}

.team ul{
  font-family: "Helvetica";
  position: fixed;
  bottom:0pt;
  right:0pt;
  background-color: bgColor;
  color: accentColor2;
  padding: 20pt;
  line-height: 24pt;
  font-size: 18pt;
  z-index: 10;
}
.team ul li{
    list-style-type: none;
}
